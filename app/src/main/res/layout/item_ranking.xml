<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:paddingEnd="6dp">

    <ImageView
        android:id="@+id/imgv_ranking_image"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:src="@drawable/ranking_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_ranking_heart"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_heart_outline"
        app:layout_constraintEnd_toEndOf="@id/imgv_ranking_image"
        app:layout_constraintTop_toTopOf="@id/imgv_ranking_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ranking_sale_percent"
        android:fontFamily="@font/notosanskr_regular"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="@color/ably_red"
        android:layout_marginEnd="3dp"
        tools:text="31%"
        app:layout_constraintTop_toTopOf="@id/tv_ranking_price"
        app:layout_constraintBottom_toBottomOf="@id/tv_ranking_price"
        app:layout_constraintStart_toStartOf="@id/imgv_ranking_image"
        app:layout_constraintEnd_toStartOf="@id/tv_ranking_price"/>

    <TextView
        android:id="@+id/tv_ranking_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/notosanskr_regular"
        android:maxLines="1"
        android:textColor="#000000"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/imgv_ranking_image"
        app:layout_constraintStart_toEndOf="@id/tv_ranking_sale_percent"
        app:layout_constraintTop_toBottomOf="@id/imgv_ranking_image"
        tools:text="13,900" />

    <TextView
        android:id="@+id/tv_ranking_brand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:fontFamily="@font/notosanskr_regular"
        android:maxLines="1"
        android:textColor="#000000"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/imgv_ranking_image"
        app:layout_constraintStart_toStartOf="@id/imgv_ranking_image"
        app:layout_constraintTop_toBottomOf="@id/tv_ranking_price"
        tools:text="소현" />

    <TextView
        android:id="@+id/tv_ranking_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:ellipsize="end"
        android:fontFamily="@font/notosanskr_regular"
        android:maxLines="1"
        android:textColor="#818181"
        android:textSize="8sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@id/imgv_ranking_image"
        app:layout_constraintStart_toStartOf="@id/imgv_ranking_image"
        app:layout_constraintTop_toBottomOf="@id/tv_ranking_brand"
        tools:text="반팔티 멜빵원피스 세트" />

</androidx.constraintlayout.widget.ConstraintLayout>